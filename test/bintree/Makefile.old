SRCDIR=src
INCDIR=inc
TOPINC=../../inc
OBJDIR=obj
MODPATH=../../obj/bintree.o ../../obj/node.o
DEBUGFLAG=-g

all: test_bintree_launcher

test_bintree_launcher: $(MODPATH) $(OBJDIR)/test_bintree_launcher.o $(OBJDIR)/test_bintree_auxiliar.o $(OBJDIR)/test_bintree_create.o $(OBJDIR)/test_bintree_insert.o
	gcc -ansi -Wall -pedantic -I$(INCDIR) -I$(TOPINC) $^ -o $@ $(DEBUGFLAG)

$(OBJDIR)/test_bintree_launcher.o: $(SRCDIR)/test_bintree_launcher.c $(INCDIR)/test_bintree.h
	gcc -ansi -Wall -pedantic -I$(INCDIR) -I$(TOPINC) -c $< -o $@ $(DEBUGFLAG)

$(OBJDIR)/test_bintree_auxiliar.o: $(SRCDIR)/test_bintree_auxiliar.c $(INCDIR)/test_bintree.h
	gcc -ansi -Wall -pedantic -I$(INCDIR) -I$(TOPINC) -c $< -o $@ $(DEBUGFLAG)

$(OBJDIR)/test_bintree_create.o: $(SRCDIR)/test_bintree_create.c $(INCDIR)/test_bintree.h
	gcc -ansi -Wall -pedantic -I$(INCDIR) -I$(TOPINC) -c $< -o $@ $(DEBUGFLAG)

$(OBJDIR)/test_bintree_insert.o: $(SRCDIR)/test_bintree_insert.c $(INCDIR)/test_bintree.h
	gcc -ansi -Wall -pedantic -I$(INCDIR) -I$(TOPINC) -c $< -o $@ $(DEBUGFLAG)

.PHONY: clean

clean:
	rm -f $(OBJDIR)/*.o
	rm -f test_bintree_launcher
